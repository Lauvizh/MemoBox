{% extends "LFMemoBoxBundle::layout.html.twig" %}

{% block content%}
<div class="row">
	<div class="col-xs-12">
		<h1>{{ theme.name }}</h1>
	</div>
</div>
{% if theme.events %}
	{% for event in theme.getEvents() %}
		<div class="row well">
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h2>{{ event.title }}</h2>
				<p class="strong">du : {{ event.getStartDate("d-m-Y") }} au : {{ event.getEndDate("d-m-Y") }}</p>
				<p>{{ event.summary|length > 180 ? event.summary|slice(0, 180) ~ '...' : event.summary  }}</p>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
			{% for media in event.getFirstsPhotos(6) %}
				<div class="col-xs-4 col-sm-2 col-md-3 col-lg-4">
					<div class="thumbnail">
				      <img src="{{ path('lf_medias_photo', {'id':media.id, 'size':'190', 'squared':'1'}) }}" alt="{{ media.fileOldName }}">
				    </div>
				</div>
			{% endfor %}
			</div>
		</div>
	{% endfor %}
{% endif %}
{% endblock %}
